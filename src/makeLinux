# LINUX VERSIO

# Compiler and flags
CC = gcc
CFLAGS = -Wall -std=c99

# Raylib linking flags for Linux
LIBS = -lraylib -lm -lpthread -ldl -lGL -lrt -lX11

# Target executable name
TARGET = game

# Source and object files
SRCS = main.c gol_file.c render.c
OBJS = $(SRCS:.c=.o)

# Default rule
all: $(TARGET)

# Link object files into final executable
$(TARGET): $(OBJS)
	$(CC) $(CFLAGS) -o $@ $(OBJS) $(LIBS)

# Compile .c files into .o files
%.o: %.c header.h
	$(CC) $(CFLAGS) -c $< -o $@

# Clean build files
clean:
	rm -f $(OBJS) $(TARGET)
